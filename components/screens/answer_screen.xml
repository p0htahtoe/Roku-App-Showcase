<?xml version="1.0" encoding="utf-8" ?>
<component name="answer_screen"
  extends="Group"
  >
  <script type="text/brightscript" uri="pkg:/components/screens/answer_screen.brs" />
  <interface>
  <field id="answer_selected"
          type="assocarray"
          alias="answer_list.checkedItem"
      />
</interface>
  <children>
    <Poster 
      id="question_background" 
      uri="pkg:/images/question_screen.jpg" 
      loadSync="true"
      width="1920" 
      height="1080" />
    <Label
      translation="[175, 140]"
      width="1000"
      height="400"
      horizAlign="center"
      vertAlign="center"
      id="questionText"
      font="font:LargeBoldSystemFont"
      wrap="true"
      text="What is BrightScript?"
      color="0xFFFFFF" />
    <RadioButtonList
      id="answer_list"
      translation="[200, 550]"
      itemSize="[1500,100]"
      vertFocusAnimationStyle="floatingFocus"
    >
      <ContentNode id="answers" role="content">
        <answer_node title = "A programming language used by Roku" value="correct"/>
        <answer_node title = "A script for a play" value="incorrect"/>
        <answer_node title = "Something to do with coding" value="incorrect"/>
        <answer_node title = "A lightbulb brand" value="incorrect"/>
      </ContentNode>
    </RadioButtonList>
  </children>
</component>